<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TOOLBAR THEME -->
    <style name="Theme.ToolbarTheme" parent="android:Theme.DeviceDefault.NoActionBar">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Theme.ToolbarTheme_v19" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

</resources>