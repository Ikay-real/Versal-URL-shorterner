<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shortener" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--item name="android:windowActivityTransitions">true</item-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--Transitions-->
        <!-- name="android:windowEnterTransition">@transition/trans_animation</item>
        <item name="android:windowExitTransition">@transition/trans_animation</item-->
    </style>
    <style name="EditTextNight" parent="Theme.MaterialComponents.DayNight">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>
    <style name="FloatingButton" parent="Theme.MaterialComponents.DayNight">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>